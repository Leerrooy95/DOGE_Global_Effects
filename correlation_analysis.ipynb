import pandas as pd
import numpy as np
from scipy.stats import pearsonr
import matplotlib.pyplot as plt

# Load data
hist = pd.read_csv('/content/drive/MyDrive/DOGE Files/historical_2025.csv')
pred = pd.read_csv('/content/drive/MyDrive/DOGE Files/predictions_2026.csv')

print("=== Historical Data (2025) ===")
print(hist)
print("\n=== Predictions (2026) ===")
print(pred)

# Combine datasets with corrected column mapping
# Assuming hist['Country'] is intended as 'USAID Cut Percentage' (numeric)
# Assuming hist['Cut_Percent'] is intended as 'Uprising Intensity Score' (numeric)
cuts = list(hist['Country']) + list(pred['Risk_Cut_Percent'])
intensity = list(hist['Cut_Percent']) + list(pred['Projected_Intensity'])

# Full correlation
r_full, p_full = pearsonr(cuts, intensity)
print(f"\n=== Full Dataset (N={len(cuts)}) ===")
print(f"Pearson r = {r_full:.3f}")
print(f"p-value = {p_full:.3f}")
print(f"Significance: {'Yes (p<0.05)' if p_full < 0.05 else 'No (p>=0.05)'}")

# Historical only (using corrected columns)
r_hist, p_hist = pearsonr(hist['Country'], hist['Cut_Percent'])
print(f"\n=== Historical Only (N={len(hist)}) ===")
print(f"Pearson r = {r_hist:.3f}")
print(f"p-value = {p_hist:.3f}")

# Without Bangladesh outlier (using corrected columns)
hist_no_outlier = hist[hist.index != 'Bangladesh'] # Bangladesh is in the index
r_no_outlier, p_no_outlier = pearsonr(
    hist_no_outlier['Country'],
    hist_no_outlier['Cut_Percent']
)
print(f"\n=== Historical Excluding Bangladesh (N={len(hist_no_outlier)}) ===")
print(f"Pearson r = {r_no_outlier:.3f}")
print(f"p-value = {p_no_outlier:.3f}")

# Visualization
plt.figure(figsize=(12, 7))

# Plot historical data (using corrected columns)
plt.scatter(
    hist['Country'], # Corrected: USAID Cut Percentage
    hist['Cut_Percent'], # Corrected: Uprising Intensity Score
    c='red',
    s=150,
    alpha=0.7,
    edgecolors='darkred',
    label='Historical (2025)',
    zorder=3
)

# Plot predictions
plt.scatter(
    pred['Risk_Cut_Percent'],
    pred['Projected_Intensity'],
    c='orange',
    s=150,
    alpha=0.6,
    marker='s',
    edgecolors='darkorange',
    label='Predicted (2026)',
    zorder=3
)

# Add regression line
z = np.polyfit(cuts, intensity, 1)
p = np.poly1d(z)
x_line = np.linspace(min(cuts), max(cuts), 100)
plt.plot(x_line, p(x_line), "b--", alpha=0.8, linewidth=2, label='Trend Line')

# Highlight Bangladesh outlier (using corrected columns)
bangladesh = hist[hist.index == 'Bangladesh'] # Bangladesh is in the index
plt.scatter(
    bangladesh['Country'], # Corrected: USAID Cut Percentage
    bangladesh['Cut_Percent'], # Corrected: Uprising Intensity Score
    c='red',
    s=300,
    marker='*', 
    edgecolors='black',
    linewidths=2,
    label='Bangladesh (Outlier)',
    zorder=4
)

plt.xlabel('USAID Cut Percentage', fontsize=12, fontweight='bold')
plt.ylabel('Uprising Intensity Score', fontsize=12, fontweight='bold')
plt.title(
    f'USAID Funding Cuts vs. Political Instability\n'
    f'r = {r_full:.3f}, p = {p_full:.3f} (N={len(cuts)})',
    fontsize=14,
    fontweight='bold',
    pad=20
)
plt.grid(alpha=0.3, linestyle='--')
plt.legend(loc='upper left', fontsize=10)

# Add annotation
plt.text(
    0.98, 0.02,
    f'Without Bangladesh: r = {r_no_outlier:.3f}, p = {p_no_outlier:.3f}',
    transform=plt.gca().transAxes,
    fontsize=9,
    verticalalignment='bottom',
    horizontalalignment='right',
    bbox=dict(boxstyle='round', facecolor='wheat', alpha=0.5)
)

plt.tight_layout()
plt.savefig('correlation.png', dpi=300, bbox_inches='tight')
print("\nâœ“ Visualization saved as 'correlation.png'")
plt.show()